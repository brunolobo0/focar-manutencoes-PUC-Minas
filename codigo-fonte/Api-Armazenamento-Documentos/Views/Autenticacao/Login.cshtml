@model Api_Orcamento.ViewsModel.UsuarioViewModel

<style>
    body {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
        background: #f5f5f5;
        height: 100vh;
        margin: 0;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 0;
    }

    .login-container {
        background: #222831;
        margin-top: 100px;
        padding: 40px;
        border-radius: 20px;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 400px;
        margin-bottom: 30px;
    }

    h2 {
        color: white;
        font-size: 28px;
        font-weight: 600;
        text-align: center;
        margin-bottom: 40px;
        margin-top: 0;
    }

    .form-group {
        margin-bottom: 25px;
        text-align: left;
    }

    label {
        display: block;
        color: #b8c5d1;
        font-size: 14px;
        margin-bottom: 8px;
        font-weight: 500;
    }

    .input-field {
        width: 100%;
        padding: 15px 20px;
        border: none;
        border-radius: 12px;
        background: white;
        font-size: 16px;
        color: #333;
        outline: none;
        transition: all 0.3s ease;
        box-sizing: border-box;
    }

        .input-field::placeholder {
            color: #999;
        }

        .input-field:focus {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
            background: white;
        }

    .validation-msg {
        color: #ff6b6b;
        font-size: 12px;
        margin-top: 5px;
        display: block;
    }

    .submit-btn {
        width: 100%;
        padding: 16px;
        background: #76abae;
        border: none;
        border-radius: 12px;
        color: white;
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        margin-top: 10px;
    }

        .submit-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 25px rgba(118, 171, 174, 0.3);
            background: #689a9d;
        }

        .submit-btn:active {
            transform: translateY(0);
        }

    .divider {
        display: flex;
        align-items: center;
        margin: 30px 0;
        color: #7f8c8d;
        font-size: 14px;
        width: 100%;
        max-width: 400px;
    }

        .divider::before,
        .divider::after {
            content: '';
            flex: 1;
            height: 1px;
            background: #7f8c8d;
        }

        .divider span {
            padding: 0 20px;
            white-space: nowrap;
        }

    .register-link {
        display: inline-block;
        width: 100%;
        max-width: 400px;
        padding: 16px;
        background: #76abae;
        border: none;
        border-radius: 12px;
        color: white;
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        text-decoration: none;
        text-align: center;
        margin-bottom: 40px;
        box-sizing: border-box;
    }

        .register-link:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 25px rgba(118, 171, 174, 0.3);
            background: #689a9d;
            color: white;
            text-decoration: none;
        }

    .footer-container {
        width: 100%;
        background: #222831;
        padding: 20px 0;
        text-align: center;
    }

    .footer-link {
        color: white;
        text-decoration: none;
        font-size: 14px;
        transition: color 0.3s ease;
    }

        .footer-link:hover {
            color: #76abae;
        }
</style>

<link rel="stylesheet" href="~/css/site.css" />
<script src="~/js/site.js"></script>

<div class="login-container">
    <h2>Login</h2>
    <form asp-action="Login" method="post" class="login-form">
        <div class="validation-msg">
            @Html.ValidationSummary(false)
        </div>
        <div class="form-group">
            <label>Email:</label>
            <input asp-for="Email" class="input-field" />
            <span asp-validation-for="Email" class="validation-msg"></span>
        </div>
        <div class="form-group">
            <label>Senha:</label>
            <input asp-for="Senha" type="password" class="input-field" />
            <span asp-validation-for="Senha" class="validation-msg"></span>
        </div>
        <button type="submit" class="submit-btn">Entrar</button>
    </form>
</div>

<div class="divider">
    <span>Não tem uma conta?</span>
</div>

<a asp-action="Registrar" class="register-link">Criar conta</a>

<div class="footer-container">
    <a href="#" class="footer-link">Focar Manutenções</a>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const inputs = document.querySelectorAll(".input-field");
        inputs.forEach(input => {
            input.addEventListener("focus", () => {
                input.parentElement.style.transform = 'scale(1.02)';
                input.style.backgroundColor = "white";
            });
            input.addEventListener("blur", () => {
                input.parentElement.style.transform = 'scale(1)';
                input.style.backgroundColor = "white";
            });
        });

        // Efeito de ripple nos botões
        document.querySelectorAll('button, .register-link').forEach(button => {
            button.addEventListener('click', function (e) {
                const ripple = document.createElement('span');
                const rect = this.getBoundingClientRect();
                const size = Math.max(rect.width, rect.height);
                const x = e.clientX - rect.left - size / 2;
                const y = e.clientY - rect.top - size / 2;

                ripple.style.width = ripple.style.height = size + 'px';
                ripple.style.left = x + 'px';
                ripple.style.top = y + 'px';
                ripple.style.position = 'absolute';
                ripple.style.borderRadius = '50%';
                ripple.style.background = 'rgba(255, 255, 255, 0.3)';
                ripple.style.pointerEvents = 'none';

                this.style.position = 'relative';
                this.style.overflow = 'hidden';
                this.appendChild(ripple);

                setTimeout(() => {
                    ripple.remove();
                }, 600);
            });
        });
    });
</script>